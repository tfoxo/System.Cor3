<?xml version="1.0" encoding="utf-8"?>
<Window
	x:Class="wpv.Window1" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:wpv="clr-namespace:wpv"
	Title="wpv"
	Height="296"
	Width="416">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition
				Width="Auto" />
			<ColumnDefinition
				Width="3" />
			<ColumnDefinition
				Width="*" />
		</Grid.ColumnDefinitions>
		<Expander
			Width="Auto"
			IsExpanded="False"
			ExpandDirection="Right">
			<Grid
				HorizontalAlignment="Stretch"
				VerticalAlignment="Stretch">
				<Grid.RowDefinitions>
					<RowDefinition
						Height="Auto" />
					<RowDefinition
						Height="*" />
				</Grid.RowDefinitions>
				<ComboBox
					Grid.Row="0"
					HorizontalAlignment="Stretch"
					VerticalAlignment="Stretch"
					x:Name="cBox" />
				<ListBox
					Grid.Row="1"
					x:Name="lBox"
					HorizontalAlignment="Stretch"
					VerticalAlignment="Stretch" />
			</Grid>
		</Expander>
		<GridSplitter
			Grid.Column="1"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch" />
		<wpv:FlvControl
			x:Name="flvp"
			Grid.Column="2"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch" />
	</Grid>
</Window>